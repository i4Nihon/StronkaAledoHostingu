  </head>
  <body link="#6699CC" vlink="#00FFCC" alink="#CC00FF">
    <div id="conteiner">
      <div class="title">
        <h1>Look at this beautiful hour!</h1>
      </div>
      <div id="nav">
        <hr />
        <a href="/">Main site</a>
        <hr />
        <a href="/date">Show date</a>
        <hr />
        <a href="/buttons">buttons</a>
        <hr />
      </div>
      <div id="content">
        <h1 id="para"></h1>
        <h3 id="para2"></h3>
        <h5 id="paraUTC"></h5>
        <script>
          function show() { const now = new Date(); var godzina =
          now.getHours(); var minuta = now.getMinutes(); var sekunda =
          now.getSeconds(); if (minuta < 10) minuta = "0" + minuta; if (sekunda
          < 10) sekunda = "0" + sekunda; const hour = "Hour: " + godzina + ":" +
          minuta + ":" + sekunda; document.getElementById("para").innerHTML =
          hour; } window.setInterval(() => { show(); }, 1000); function UTC() {
          const now = new Date(); const secouds = now.getUTCSeconds(); const
          minutes = now.getUTCMinutes(); const hours = now.getUTCHours(); if
          (minutes < 10) minutes = "0" + minutes; if (secouds < 10) secouds =
          "0" + secouds; const UTChour = "UTC TIME: " + hours + ":" + minutes +
          ":" + secouds; document.getElementById("paraUTC").innerHTML = UTChour;
          } window.setInterval(() => { UTC(); }, 1000);
        </script>
        <script type="text/javascript" src="/dateScript.js"></script>
      </div>
    </div>
  </body>
</html>